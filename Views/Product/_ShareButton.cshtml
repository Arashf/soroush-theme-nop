@model ProductDetailsModel

@using Nop.Core;

@inject IWebHelper webHelper

@{
    var shareUrl = webHelper.GetStoreLocation() + Model.SeName;
}

<div class="product-social-buttons">
    <label class="product-social-label">@T("SevenSpikes.Themes.Emporium.Common.Share")</label>
    <ul class="product-social-sharing">
        <li>
            <!-- Twitter -->
            <a class="twitter" title="@T("SevenSpikes.Themes.Emporium.Common.ShareTwitter")" href="javascript:openShareWindow('https://twitter.com/share?url=@shareUrl')">@T("SevenSpikes.Themes.Emporium.Common.ShareTwitter")</a>
        </li>
        <li>
            <!-- Facebook -->
            <a class="facebook" title="@T("SevenSpikes.Themes.Emporium.Common.ShareFacebook")" href="javascript:openShareWindow('https://www.facebook.com/sharer.php?u=@shareUrl')">@T("SevenSpikes.Themes.Emporium.Common.ShareFacebook")</a>
        </li>
        <li>
            <a class="pinterest" title="@T("SevenSpikes.Themes.Emporium.Common.SharePinterest")" href="javascript:void((function(){var e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','https://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)})());">@T("SevenSpikes.Themes.Emporium.Common.SharePinterest")</a>
        </li>
        <li>
            <!-- Email a friend -->
            @await Html.PartialAsync("_ProductEmailAFriendButton", Model)
        </li>
    </ul>

    <script>
        function openShareWindow(url) {
            var winWidth = 520;
            var winHeight = 400;
            var winTop = (screen.height / 2) - (winHeight / 2);
            var winLeft = (screen.width / 2) - (winWidth / 2);

            window.open(url, 'sharer', 'top=' + winTop + ',left=' + winLeft + ',toolbar=0,status=0,width=' + winWidth + ',height=' + winHeight);
        }
    </script>
</div>
